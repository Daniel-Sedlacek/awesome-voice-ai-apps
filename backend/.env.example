# Azure Speech (all apps use STT)
AZURE_SPEECH_KEY=your-speech-key-here
AZURE_SPEECH_REGION=westeurope

# Azure OpenAI (mcdonalds, dental, psychotherapy)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_KEY=your-openai-key-here
AZURE_OPENAI_DEPLOYMENT=gpt-4.1-mini
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# Azure Translator (transport only)
AZURE_TRANSLATOR_KEY=your-translator-key-here
AZURE_TRANSLATOR_REGION=westeurope

# Database (mcdonalds only)
DATABASE_URL=postgresql+asyncpg://mcdonalds:mcdonalds@localhost:5432/mcdonalds_menu

# Embedding/Reranker models (mcdonalds only)
EMBEDDING_MODEL_NAME=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
EMBEDDING_DIMENSION=384
RERANKER_MODEL_NAME=cross-encoder/ms-marco-MiniLM-L-6-v2

# STT provider switch (default: azure)
STT_PROVIDER=azure
DEEPGRAM_API_KEY=
